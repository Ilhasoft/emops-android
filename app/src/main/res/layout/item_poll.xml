<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        tools:background="#f00">

        <ImageView
            android:id="@+id/pollCover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_cover_height"
            android:scaleType="centerCrop"
            android:src="@drawable/poll_sample"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_cover_height"
            android:scaleType="centerCrop"
            android:background="@color/translucent_cover"/>

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="16sp"
            style="@style/AppTheme.Info"
            tools:text="@string/polls_current"/>

        <TextView
            android:id="@+id/responseRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/responded"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            style="@style/AppTheme.Info"
            tools:text="@string/polls_response_rate"/>

        <TextView
            android:id="@+id/responded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pollCover"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            style="@style/AppTheme.Info"
            tools:text="@string/polls_responded_info"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@+id/pollCover"
            android:maxLines="4"
            android:ellipsize="end"
            android:textSize="18sp"
            android:padding="10dp"
            tools:text="@string/poll1_description"/>

        <Button
            android:id="@+id/participate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="@string/polls_participate"
            android:background="@null"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>