<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_story_height"
    android:minHeight="@dimen/item_story_height"
    android:layout_margin="@dimen/card_margin">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_story_height"
            android:scaleType="centerCrop"
            android:src="@drawable/story1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_story_height"
            android:background="@color/translucent_cover"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="30dp"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="start"
                android:maxLines="3"
                android:textSize="18sp"
                android:ellipsize="end"
                tools:text="Boosting community development, disease control with sms-based platform"/>

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                style="@style/AppTheme.Info"
                android:gravity="center_vertical"
                tools:text="by John Cordeiro"/>

            <TextView
                android:id="@+id/markers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AppTheme.Info"
                android:visibility="visible"
                tools:text="Water, Violence, Education"/>

            <TextView
                android:id="@+id/contributors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                tools:text="25 contributions"
                style="@style/AppTheme.Info" />

        </LinearLayout>

        <Button
            android:id="@+id/readFullStory"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/selector_button_normal"
            android:text="@string/story_item_read_full_story"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>