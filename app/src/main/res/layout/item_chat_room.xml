<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    tools:background="#f00">

    <FrameLayout
        android:id="@+id/mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp">

        <br.com.ilhasoft.support.widget.Pacman
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:pacmanBackgroundColor="#ddd"
            app:pacmanForegroundColor="#aaa"
            app:pacmanProgress="20"/>

        <TextView
            android:id="@+id/firstLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:text="J"/>

    </FrameLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/mark"
        android:layout_above="@+id/lastMessage"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/mark"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        tools:text="\@Eddie"/>

    <TextView
        android:id="@+id/lastMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/mark"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/mark"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="@string/chat1_lastMessage"/>

    <TextView
        android:id="@+id/lastMessageDate"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/unreadMessages"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        tools:text="16:00"/>

    <TextView
        android:id="@+id/unreadMessages"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:background="@drawable/shape_highlight"
        tools:text="2"/>

</RelativeLayout>