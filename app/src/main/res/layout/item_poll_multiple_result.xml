<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/card_margin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/view_poll_results_card_header"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            tools:src="@drawable/rate_gender_example"
            style="@style/AppTheme.CardItemPadding"/>

        <Button
            android:id="@+id/resultsByRegion"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/selector_button_normal"
            android:text="@string/poll_results_by_region" />

    </LinearLayout>

</android.support.v7.widget.CardView>