<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="@dimen/item_media_width"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_media">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_camera_grey600_36dp" />

        <ImageView
            android:id="@+id/videoPlay"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_play_48dp"
            android:visibility="gone"
            tools:visibility="visible"/>

    </FrameLayout>

    <TextView
        android:id="@+id/cover"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="2dp"
        android:textColor="@android:color/white"
        android:text="@string/cover_title"
        android:background="@drawable/ic_selected_cover"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/coverUnselected"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end|bottom"
        android:src="@drawable/shape_cover_not_selected"/>

    <Button
        android:id="@+id/remove"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:background="@drawable/ic_cancel_black_36dp"/>

</FrameLayout>