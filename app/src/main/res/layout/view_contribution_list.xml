<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingStart="10dp"
    android:background="@android:color/white"
    tools:showIn="@layout/fragment_story_view">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/contributionList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/addContributionContainer" />

    <TextView
        android:id="@+id/contribute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_centerInParent="true"
        android:drawablePadding="5dp"
        android:text="@string/title_first_comment"
        android:drawableTop="@drawable/ic_no_comments" />

    <include
        android:id="@+id/addContributionContainer"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        layout="@layout/item_add_contribution"
        tools:visibility="visible" />

</RelativeLayout>