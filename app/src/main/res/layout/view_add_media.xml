<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/addMedia"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/item_media_size"
    android:layout_height="@dimen/item_media_size"
    android:minWidth="@dimen/item_media_size"
    android:minHeight="@dimen/item_media_size"
    android:background="@drawable/shape_media"
    tools:padding="5dp">

    <ImageView
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_camera_alt_grey_800_36dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_add_circle_grey_600_36dp"/>

</FrameLayout>